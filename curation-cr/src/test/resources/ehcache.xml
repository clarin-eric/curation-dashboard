<ehcache:config
        xmlns:ehcache="http://www.ehcache.org/v3"
        xmlns:jcache="http://www.ehcache.org/v3/jsr107">
    <ehcache:persistence directory="/tmp/ehcache"/>
    <ehcache:cache alias="ccrCache">
        <ehcache:expiry>
            <ehcache:none/>
        </ehcache:expiry>
        <ehcache:heap unit="entries">1000</ehcache:heap>
    </ehcache:cache>
    <ehcache:cache alias="crCache">
        <ehcache:expiry>
            <ehcache:none/>
        </ehcache:expiry>
        <ehcache:heap unit="entries">1000</ehcache:heap>
    </ehcache:cache>
    <ehcache:cache alias="pphCache">
        <ehcache:expiry>
            <ehcache:none/>
        </ehcache:expiry>
        <ehcache:resources>
            <ehcache:disk unit="GB" persistent="true">10</ehcache:disk>
        </ehcache:resources>
    </ehcache:cache>
</ehcache:config>